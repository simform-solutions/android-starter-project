<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="PrimaryEditText">
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/gilroy_medium.otf</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="PrimaryButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
    </style>
    <style name="RoundedButton" parent="PrimaryButton">
        <item name="spinning_bar_padding">4dp</item>
        <item name="finalCornerAngle">100dp</item>
        <item name="initialCornerAngle">4dp</item>
        <item name="spinning_bar_color">@color/colorPrimaryDark</item>
    </style>
</resources>
